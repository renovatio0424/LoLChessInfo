<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_combination_name"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_combination_count1" tools:layout_editor_absoluteY="19dp"
                tools:layout_editor_absoluteX="0dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="19dp"
                tools:layout_editor_absoluteX="59dp" android:id="@+id/tv_combination_count2"/>
        <ImageView
                android:layout_width="56dp"
                android:layout_height="54dp" tools:srcCompat="@tools:sample/avatars"
                tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="118dp"
                android:id="@+id/imageView"/>
        <ImageView
                android:layout_width="52dp"
                android:layout_height="54dp" tools:srcCompat="@tools:sample/avatars"
                tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="174dp"
                android:id="@+id/imageView2"/>
        <ImageView
                android:layout_width="52dp"
                android:layout_height="54dp" tools:srcCompat="@tools:sample/avatars"
                tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="226dp"
                android:id="@+id/imageView3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>